		"@nextui-org/tooltip": "^2.0.30",
		"@preact/preset-vite": "^2.8.2",
		"@preact/signals": "^1.2.3",
		"@prefresh/vite": "^2.4.5",
		"@types/bun": "^1.0.12",
		"@types/invariant": "^2.2.37",
		"autoprefixer": "^10.4.19",
		"clsx": "^2.1.0",
		"cssnano": "^6.1.2",
		"dotenv-flow": "^4.1.0",
		"flexsearch": "^0.7.43",
		"framer-motion": "^11.0.24",
		"indent-string": "^5.0.0",
		"indexed-iterable": "^1.0.2",
		"invariant": "^2.2.4",
		"itertools": "^2.2.5",
