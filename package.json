		"vite-plugin-sass-dts": "^1.3.17",
		"wouter-preact": "^3.1.1",
		"wxt": "^0.17.11"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.6.3",
		"@cspell/dict-ru_ru": "^2.2.1",
		"@faker-js/faker": "^8.4.1",
		"cspell": "^8.6.1",
