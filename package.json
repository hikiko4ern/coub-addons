{
	"name": "coub-addons",
	"description": "Coub.com additional features",
	"version": "0.1.7",
	"type": "module",
	"scripts": {
		"prepare": "husky || true",
		"postinstall": "run-s postinstall:patch postinstall:wxt",
		"postinstall:patch": "patch-package",
		"postinstall:wxt": "wxt prepare",
		"dev": "wxt",
		"dev:ff": "wxt -b firefox",
		"build": "wxt build",
		"build:ff": "wxt build -b firefox",
		"zip": "wxt zip",
		"zip:ff": "wxt zip -b firefox",
		"test": "vitest",
		"lint": "run-p \"lint:*\"",
		"lint:biome": "biome check --apply --error-on-warnings .",
		"lint:dprint": "dprint fmt",
		"lint:prettier": "prettier -w .",
		"lint:type-check": "tsc --noEmit",
		"lint:spell-check": "cspell lint --no-progress --no-summary .",
		"version": "git-cliff --bump -o && git add CHANGELOG.md",
		"bump": "bun run utils/bump.ts"
	},
	"workspaces": ["packages/*"],
	"dependencies": {
		"@codemirror/autocomplete": "^6.15.0",
		"@codemirror/commands": "^6.3.3",
		"@codemirror/language": "^6.10.1",
